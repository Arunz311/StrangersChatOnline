@page
@model StrangersChat2.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] =  "";
}

<h2>@ViewData["Title"]</h2>
<h4>Reset your password.</h4>
<hr />
        
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="width: 250px; margin-bottom: 15px;" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" style="width: 250px; margin-bottom: 15px;" required  />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" style="width: 250px; margin-bottom: 15px;" required  />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Input.Code" />
            <button type="submit" class="btn btn-primary" style="width: 250px; margin-bottom: 15px;" required >Reset password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
}
