@page
@model StrangersChat2.Pages.HomePageAfterLoginModel
@{
    ViewData["Title"] = "Home Page After Login";
}

<form method="post" asp-area="Identity" asp-page="/Account/ChatPage" class="mx-auto" style="max-width: 500px;">
    <div class="text-center">
        <h1 class="display-6"><strong>Welcome to Strangers Chat</strong></h1>
        <img src="~/images/strangerchatimage.jpg" alt="strangerchatimage.jpg" class="img-fluid mt-4 mb-4">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    </div>

    <div class="row mb-3">
        <div class="col-sm-4 text-sm-end">
            <label for="preferredName" class="form-label">Preferred Name</label>
        </div>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="preferredName" name="PreferredName" required />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 text-sm-end">
            <label for="gender" class="form-label">What are you?</label>
        </div>
        <div class="col-sm-8">
            <select class="form-select" id="gender" name="Gender" required>
                <option value="" disabled selected>Select your option</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Start Chat</button>
    </div>
</form>
